@page
@model ViewModel
@{
    ViewData["Title"] = "About";
}

<style>
    body {
        background-image: url('Images/background.jpeg');
    }
</style>

<h3>READ SAVED DATA</h3>
<table border="0" cellpadding="0" cellspacing="0" style="width:10%;float:left">
    <tbody>
        <tr>
            <th>Employee ID</th>
        </tr>

        @foreach (var item in Model.id)
        {
            <tr>
                <td>@item</td>
            </tr>
        }
    </tbody>
</table>


<table border="0" cellpadding="0" cellspacing="0" style="width:30%;float:left">
    <tbody>
        <tr>
            <th>Name</th>
        </tr>

        @foreach (var item in Model.name)
        {
            <tr>
                <td>@item</td>
            </tr>
        }
    </tbody>
</table>

<table border="0" cellpadding="0" cellspacing="0" style="width:30%;float:left">
    <tbody>
        <tr>
            <th>Designation</th>
        </tr>

        @foreach (var item in Model.designation)
        {
            <tr>
                <td>@item</td>
            </tr>
        }
    </tbody>
</table>

<table border="0" cellpadding="0" cellspacing="0" style="width:30%;float:left">
    <tbody>
        <tr>
            <th>Contact Detail</th>
        </tr>

        @foreach (var item in Model.contact)
        {
            <tr>
                <td>@item</td>
            </tr>
        }
    </tbody>
</table>

<h2>...</h2>


<h3>CREATE NEW DATA</h3>

<form method="get" action="/CreateData" border="0" cellpadding="0" cellspacing="0" style="width:70%;float:left">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Employee ID" />
        <input type="text" name="name" class="form-control" placeholder="Name" />
        <input type="text" name="designation" class="form-control" placeholder="Designation" />
        <input type="text" name="contact" class="form-control" placeholder="Contact" />
        <br />
        <input type="submit" value="Create Data!" class="btn btn-primary" style="float:right;background:black;" />
    </div>
</form>

<h3>DELETE EXISTING DATA</h3>

<form method="get" action="/DeleteData" border="0" cellpadding="0" cellspacing="0" style="width:30%;float:right">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Enter Employee ID" />
        <input type="submit" value="Delete Data!" class="btn btn-primary" style="background:red;float:right" />
    </div>
</form>

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #FFF;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #b8b9bc;
    }
</style>
   
